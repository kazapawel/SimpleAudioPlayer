<UserControl x:Class="AudioPlayerMVVMandNAudio.PlaylistControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioPlayerMVVMandNAudio"
             mc:Ignorable="d"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:b="MyBehaviorAssembly;assembly=MyBehaviorAssembly"
             xmlns:dd="urn:gong-wpf-dragdrop"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            
            <!-- playlsit listbox -->
            <RowDefinition Height="*"/>

            <!-- playlist options ItemContainerStyle="{StaticResource PlaylistItemStyle}"-->
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- PLAYLIST -->
        <ListBox Grid.Row="0"
                 x:Name="PlaylistListbox"                
                 Style="{StaticResource PlaylistStyle}"
                 ItemsSource="{Binding SongsListObservable}"                                                
                 SelectedItem="{Binding SelectedTrack, Mode=OneWayToSource}"
                 SelectionMode="Extended"
                 AllowDrop="True">
            
            <!-- Playlist item style -->
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    
                    <!-- Events handlers -->
                    <EventSetter Event="MouseMove" Handler="Item_MouseMove"/>
                    <EventSetter Event="DragOver" Handler="Item_DragOver"/>
                    
                    <!-- Template -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                <Border x:Name="border"
                            Background="{TemplateBinding Background}">
                                    <local:PlaylistItem/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <!-- Selection style trigger -->
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1D556D"/>

                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                            </MultiTrigger.Conditions>

                            <Setter Property="Background" Value="#196E92"/>
                        </MultiTrigger>
                    </Style.Triggers>
                    
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>


        <!-- OPTIONS -->
        <Border Grid.Row="1" 
                BorderThickness="0"
                BorderBrush="LightPink"
                Margin="5,0,5,5"
                Padding="1"
                HorizontalAlignment="Right">
            <Grid>
                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    
                    <!-- Save button-->
                    <ColumnDefinition Width="auto"/>
                    
                </Grid.ColumnDefinitions>
                
               <!-- Header-->
                <TextBlock Grid.Column="0"
                           Style="{StaticResource WhiteTextblock}"
                           Text="Items:"
                           Padding="2"
                           FontSize="11"
                           VerticalAlignment="Center"
                           />

                <!-- Items count-->
                <TextBlock Grid.Column="1"
                           Style="{StaticResource WhiteTextblock}"
                           Text="{Binding Items}"
                           Padding="2"
                           FontSize="11"
                           VerticalAlignment="Center"
                           />
                
                <!-- Add item button -->
                <Button Grid.Column="2"                     
                        Height="17"
                        Content="Add"
                        Margin="2,2,2,0" VerticalAlignment="Top"
                        Click="AddButton_Click"
                        />

                <!-- Remove items button -->
                <Button Grid.Column="3"                     
                        Height="17"
                        Content="Rmv"
                        Margin="2"
                        CommandParameter="{Binding ElementName=PlaylistListbox, Path=SelectedItems}"
                        Command="{Binding RemoveTracksFromPlaylistCommand}"
                        />

                <!-- Load playlist button-->
                <Button Grid.Column="4"                     
                        Height="17"
                        Content="LOAD"
                        Margin="2"
                        />

                <!-- Save playlist button-->
                <Button Grid.Column="5"                     
                        Height="17"
                        Content="SAVE"
                        Margin="2"
                        HorizontalAlignment="Right"
                        />

                <!-- Clear playlist button-->
                <Button Grid.Column="6"                     
                        Height="17"
                        Content="CLR"
                        Margin="2"
                        Command="{Binding ClearPlaylistCommand}"
                        />

            </Grid>
        </Border>
        

        

    </Grid>
</UserControl>
